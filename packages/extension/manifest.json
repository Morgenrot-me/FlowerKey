{
  "manifest_version": 3,
  "name": "FlowerKey 花钥",
  "version": "0.3.0",
  "description": "无后端密码管理 + 加密书签收藏。主密码永不上传，端到端加密，WebDAV 自托管同步，换设备无需迁移。",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
